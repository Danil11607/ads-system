<form class="form-horizontal" method="post" action="">
    <div class="form-group">
        <label class="control-label col-md-2" for="Email">Email</label>
        <div class="col-md-6">
            <input type="email" required class="form-control" name="Email" id="Email" value="{{info.Email}}">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Name">Имя</label>
        <div class="col-md-6">
            <input type="text" required class="form-control" name="Name" id="Name" value="{{info.Name}}">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Pass">Пароль</label>
        <div class="col-md-6">
            <input type="password" class="form-control" name="Pass" id="Pass"
                {{#if info.Id}}
                    placeholder="Старый пароль не показывается"
                {{/if}}
                {{#unless info.Id}} required {{/unless}}
            >
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Role">Роль</label>
        <div class="col-md-6">
            <select name="Role" id="Role" required class="form-control">
                <option value="Admin" {{#if info.Id }} {{{ifCond 'Admin' '==' info.Role 'selected' ' ' }}} {{/if}}>Администратор</option>
                <option value="Advertiser" {{#if info.Id }} {{{ifCond 'Advertiser' '==' info.Role 'selected' ' ' }}} {{/if}}>Рекламодатель</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-8 col-md-offset-2">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </div>
</form>