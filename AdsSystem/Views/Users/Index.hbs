<a class="btn btn-success btn-block btn-lg" href="/users/edit"><i class="fa fa-plus"></i> Добавить</a>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>ID</th>
        <th>Имя</th>
        <th>E-mail</th>
        <th>Роль</th>
        <th width="150">Функции</th>
    </tr>
    </thead>
    <tbody>
        {{#each list}}
            <tr>
                <td>{{Id}}</td>
                <td>{{Name}}</td>
                <td>
                    <a href="mailto:{{Email}}">{{Email}}</a>
                </td>
                <td>{{{ifCond 'Admin' '==' Role 'Администратор' 'Рекламодатель' }}}</td>
                <td>
                    <a class="btn btn-primary" href="/users/edit/{{id}}">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a
                            class="btn btn-danger"
                            onclick="return confirm('Вы действительно хотите удалить пользователя?');"
                            href="/users/delete/{{id}}"
                    >
                        <i class="fa fa-trash-o"></i>
                    </a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>