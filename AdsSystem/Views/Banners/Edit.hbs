<form class="form-horizontal" method="post" action="" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label col-md-2" for="Name">Название</label>
        <div class="col-md-6">
            <input type="text" required class="form-control" name="Name" id="Name" value="{{info.Name}}">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Type">Тип</label>
        <div class="col-md-6">
            <select name="Type" id="Type" required class="form-control">
                {{#each types}}
                    <option value="{{@index}}" {{#if info.Id }} {{{ifCond @index '==' info.Type 'selected' ' ' }}} {{/if}}>{{this}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="form-group type type-0" style="display: none">
        <label class="control-label col-md-2" for="Image">Картинка</label>
        <div class="col-md-6">
            {{#if ImageLink}}
                <img src="{{ImageLink}}" alt="" class="img-thumbnail">
            {{/if}}
            <input type="file" class="form-control" name="Image" id="Image">
        </div>
    </div>
    <div class="form-group type type-1" style="display: none">
        <label class="control-label col-md-2" for="Html">HTML</label>
        <div class="col-md-6">
            <textarea type="text" class="form-control" name="Html" id="Html">{{info.Html}}</textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Link">Ссылка</label>
        <div class="col-md-6">
            <input type="url" required class="form-control" name="Link" id="Link" value="{{info.Link}}">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Priority">Приоритет</label>
        <div class="col-md-6">
            <input type="number" class="form-control" name="Priority" id="Priority" value="{{info.Priority}}">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="MaxImpressions">Максимальное число просмотров</label>
        <div class="col-md-6">
            <input type="number" class="form-control" name="MaxImpressions" id="MaxImpressions" value="{{info.MaxImpressions}}">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Name">Даты показа</label>
        <div class="col-md-6">
            <div class="input-group">
                <input type="date" class="form-control" name="StartTime" id="StartTime" value="{{info.StartTime}}" placeholder="Дата начала">
                <div class="input-group-addon">-</div>
                <input type="date" class="form-control" name="EndTime" id="EndTime" value="{{info.EndTime}}" placeholder="Дата окончания">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Зоны ротации</label>
        <div class="col-md-6">
            {{#each zones}}
                <input type="checkbox" name="zones[{{id}}]" {{#if IsEnabled}}checked{{/if}}> {{Name}} <small>({{Width}}x{{Height}})</small> <br>
            {{/each}}
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Advertiser">Рекламодатель</label>
        <div class="col-md-6">
            {{Advertiser}}
            <select name="Advertiser" id="Advertiser" required class="form-control">
                {{#each advertizers}}
                    <option value="">Выбрать рекламодателя</option>
                    <option value="{{Id}}" {{#if info.Id }} {{{ifCond Id '==' Advertiser 'selected' ' ' }}} {{/if}}>{{Name}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6 col-md-offset-2">
            <label><input type="checkbox" name="IsActive" checked> Активен</label> <br>
            <label><input type="checkbox" name="IsArchive"> Архивирован</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-8 col-md-offset-2">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </div>
</form>

<script src="/js/admin/banners/edit.js"></script>